<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/margin_size_10"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_size_10"
    android:background="@drawable/bg_notification_item"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/margin_size_50"
        android:layout_height="@dimen/margin_size_50"
        android:id="@+id/icon"
        android:padding="@dimen/margin_size_10"
        android:src="@drawable/cocktail"
        android:contentDescription="@string/img_desc"
        android:background="@drawable/bg_stroke_yellow_solid_white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_10"
        android:text="Your drink is ready. Pickup at counter by showing code."
        android:textColor="@color/black"
        android:id="@+id/text"
        android:textSize="@dimen/text_size_15"/>

</LinearLayout>
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/margin_size_100"
    android:id="@+id/cardView"
    android:layout_height="@dimen/margin_size_50"
    android:layout_margin="@dimen/margin_size_5"

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".activity.NfcActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_round"
                android:contentDescription="@string/img_desc"
                android:gravity="center"
                android:padding="@dimen/margin_size_20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/img_desc"
                        android:src="@mipmap/ic_nfc" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_150"
                android:layout_marginStart="@dimen/margin_size_20"
                android:layout_marginTop="@dimen/margin_size_50"
                android:layout_marginEnd="@dimen/margin_size_20"
                android:background="@drawable/bg_line_yellow"
                android:gravity="center"
                android:padding="@dimen/margin_size_20">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_light"
                    android:gravity="center"
                    android:text="@string/place_device_against_the_tag"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/text_size_24" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <View
                    android:layout_width="@dimen/margin_size_100"
                    android:layout_height="1dp"
                    android:background="@color/yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_size_20"
                    android:layout_marginEnd="@dimen/margin_size_20"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/or"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/text_size_22" />

                <View
                    android:layout_width="@dimen/margin_size_100"
                    android:layout_height="1dp"
                    android:background="@color/yellow" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlQr"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="@dimen/margin_size_20"
                android:background="@drawable/bg_yellow">

                <ImageView
                    android:layout_width="@dimen/margin_size_25"
                    android:layout_height="@dimen/margin_size_25"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/text_size_15"
                    android:contentDescription="@string/img_desc"
                    android:src="@mipmap/ic_qr" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/scan_qr_code"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16" />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/title"
                android:textColor="@color/blue"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dashboard_card_size"
                android:layout_marginRight="@dimen/dashboard_card_margin_right"
                android:layout_marginEnd="@dimen/dashboard_card_margin_right"
                android:layout_weight="1"
                android:id="@+id/menuLayout"
                android:background="@drawable/stroke_yellow_halfcurve">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_icon_size"
                        android:layout_height="@dimen/dashboard_icon_size"
                        android:padding="@dimen/dashboard_icon_padding"
                        android:background="@drawable/circular_black_drawable"
                        android:src="@drawable/ic_restaurant_menu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menu"
                        android:layout_marginTop="@dimen/dashboard_icon_title_margin"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dashboard_title_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dashboard_card_size"
                android:layout_marginLeft="@dimen/dashboard_card_margin_right"
                android:layout_marginStart="@dimen/dashboard_card_margin_right"
                android:layout_weight="1"
                android:id="@+id/ordersLayout"
                android:background="@drawable/stroke_yellow_halfcurve">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_icon_size"
                        android:layout_height="@dimen/dashboard_icon_size"
                        android:padding="@dimen/dashboard_icon_padding"
                        android:background="@drawable/circular_black_drawable"
                        android:src="@drawable/ic_mail" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dashboard_icon_title_margin"
                        android:text="Orders"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dashboard_title_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dashboard_icon_title_margin"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="ETA: 25min"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dashboard_title_size"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dashboard_card_size"
                android:layout_marginRight="@dimen/dashboard_card_margin_right"
                android:layout_marginEnd="@dimen/dashboard_card_margin_right"
                android:layout_weight="1"
                android:background="@drawable/stroke_yellow_halfcurve">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_icon_size"
                        android:layout_height="@dimen/dashboard_icon_size"
                        android:padding="@dimen/dashboard_icon_padding"
                        android:background="@drawable/circular_black_drawable"
                        android:src="@drawable/ic_mode_comment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/dashboard_icon_title_margin"
                        android:textSize="@dimen/dashboard_title_size"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dashboard_card_size"
                android:layout_marginLeft="@dimen/dashboard_card_margin_right"
                android:layout_marginStart="@dimen/dashboard_card_margin_right"
                android:layout_weight="1"
                android:background="@drawable/stroke_yellow_halfcurve">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dashboard_icon_size"
                        android:layout_height="@dimen/dashboard_icon_size"
                        android:src="@drawable/ic_account" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dashboard_icon_title_margin"
                        android:text="Close Tab"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dashboard_title_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Due: $98"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dashboard_title_size"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Group"
            android:textColor="@color/blue"
            android:textSize="@dimen/group_heading_size"
            android:layout_marginTop="@dimen/group_margin"
            android:layout_marginBottom="@dimen/group_margin"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp">

                <ImageView
                    android:layout_width="@dimen/group_icon_size"
                    android:layout_height="@dimen/group_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_person"
                    android:padding="8dp"
                    android:background="@drawable/circular_drawable"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="John"
                    android:textColor="@color/black"
                    android:textSize="@dimen/group_title_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp">

                <ImageView
                    android:layout_width="@dimen/group_icon_size"
                    android:layout_height="@dimen/group_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_person"
                    android:padding="8dp"
                    android:background="@drawable/circular_drawable"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="Maria"
                    android:textColor="@color/black"
                    android:textSize="@dimen/group_title_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp">

                <ImageView
                    android:layout_width="@dimen/group_icon_size"
                    android:layout_height="@dimen/group_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_person"
                    android:padding="8dp"
                    android:background="@drawable/circular_drawable"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="Lina"
                    android:textColor="@color/black"
                    android:textSize="@dimen/group_title_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="25dp">

                <ImageView
                    android:layout_width="@dimen/group_icon_size"
                    android:layout_height="@dimen/group_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_person"
                    android:padding="8dp"
                    android:background="@drawable/circular_drawable"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="Mom"
                    android:textColor="@color/black"
                    android:textSize="@dimen/group_title_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/group_icon_size"
                    android:layout_height="@dimen/group_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_add"
                    android:padding="8dp"
                    android:background="@drawable/plus_circular_drawable"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        app:elevation="16dp"
        android:layout_alignParentBottom="true"
        app:labelVisibilityMode="unlabeled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/navigation"
        app:itemIconTint="@drawable/bottom_navigation_view_item_tint"
        app:itemTextColor="@drawable/bottom_navigation_view_item_tint"
        android:background="@color/yellow"/>


</RelativeLayout>
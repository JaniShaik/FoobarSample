<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_1"
        android:orientation="vertical"
        android:padding="@dimen/margin_size_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_10">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/margin_size_60"
                android:layout_height="@dimen/margin_size_60"
                android:contentDescription="@string/img_desc"
                android:src="@drawable/img_pizza" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_10"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:maxLines="1"
                        android:text="Chicken Pepperoni"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_15" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_size_5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/margin_size_5"
                            android:layout_marginEnd="@dimen/margin_size_5"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/margin_size_20"
                            android:fontFamily="@font/montserrat_regular"
                            android:maxLines="1"
                            android:text="$15"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</layout>
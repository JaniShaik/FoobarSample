<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".activity.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="15dp"
        android:id="@+id/mainTitle"
        android:text="@string/launcher_title"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:text="@string/sub_title"
        android:id="@+id/subTitle"
        android:textColor="@color/white"
        android:layout_below="@+id/mainTitle"
        android:textSize="@dimen/sub_title_size"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:text="@string/connect_with_facebook_google"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/signInLayout"
        android:textSize="@dimen/sub_title_size"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/signInLayout"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/yellow"
            android:orientation="vertical"
            android:id="@+id/fbCardView"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:src="@drawable/ic_fb_logo"
                android:padding="8dp"
                android:background="@color/yellow"
                android:id="@+id/fbIcon"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="25sp"
            android:textColor="@color/yellow"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/yellow"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:id="@+id/googleCardView"
            android:layout_gravity="center"
            app:cardCornerRadius="5dp">

            <ImageView
                android:layout_width="@dimen/menu_icon_size"
                android:layout_height="@dimen/menu_icon_size"
                android:src="@drawable/ic_google_logo"
                android:padding="8dp"
                android:id="@+id/iconIMG"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_bg"
        android:scaleType="fitXY"/>-->

</RelativeLayout>